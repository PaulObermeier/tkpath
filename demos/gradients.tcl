package require tkpathset ::tkpath::antialias 1set t .c_gradientstoplevel $tset w $t.cpack [canvas $w -bg white -width 480 -height 400]set rainbow [::tkpath::gradientstopsstyle rainbow]set g1 [::tkpath::gradient create linear -stops {{0 lightblue} {1 blue}}]$w create prect 10 10 210 60 -fillgradient $g1$w create text 220 20 -anchor w -text "-stops {{0 lightblue} {1 blue}}"set g2 [::tkpath::gradient create linear -stops {{0 "#f60"} {1 "#ff6"}} \  -lineartransition {50 0 160 0} -units userspace]$w create prect 10 70 210 120 -fillgradient $g2$w create text 220 80 -anchor w -text "-stops {{0 #f60} {1 #ff6}}"$w create text 220 100 -anchor w -text "-lineartransition {50 0 160 0} -units userspace"set g5 [::tkpath::gradient create linear -stops {{0 lightgreen} {1 green}}]$w create prect 10 130 210 180 -fillgradient $g5$w create text 220 140 -anchor w -text "-stops {{0 lightgreen} {1 green}}"set g3 [::tkpath::gradient create linear -stops {{0 "#f60"} {1 "#ff6"}} \  -lineartransition {0 0 0 1}]$w create path "M 40 200 q 60 -200 120 0 z" -fillgradient $g3set g4 [::tkpath::gradient create linear -stops $rainbow]$w create prect 10 210 210 260 -fillgradient $g4$w create text 220 220 -anchor w -text "rainbow"set g6 [::tkpath::gradient create radial -stops {{0 white} {1 black}}]$w create circle 60 330 -r 50 -fillgradient $g6set g7 [::tkpath::gradient create radial -stops {{0 white} {1 black}}  \  -radialtransition {0.6 0.4 0.5 0.7 0.3}]$w create circle 200 330 -r 50 -fillgradient $g7 -stroke ""set g8 [::tkpath::gradient create radial -stops {{0 white} {1 black}}  \  -radialtransition {0.6 0.4 0.8 0.7 0.3}]$w create circle 340 330 -r 50 -fillgradient $g8 -stroke ""if {![tkpath::pixelalign]} {    $w move all 0.5 0.5}